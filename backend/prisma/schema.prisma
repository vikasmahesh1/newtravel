generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flight {
  id         String   @id
  airline    String
  from       String
  to         String
  departure  DateTime
  arrival    DateTime
  duration   String
  stops      Int
  price      Int
  fareClass  String
  amenities  String[]
  market     String
  region     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Hotel {
  id            String   @id
  name          String
  location      String
  pricePerNight Int
  rating        Float
  amenities     String[]
  market        String
  images        String[]
  gallery       String[]
  description   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model BusRoute {
  id          String   @id
  operator    String
  route       String
  departure   DateTime
  arrival     DateTime
  duration    String
  price       Int
  amenities   String[]
  seating     String
  description String
  market      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HolidayPackage {
  id                String   @id
  name              String
  destination       String
  theme             String
  duration          String
  pricePerPerson    Int
  travelersIncluded Int
  highlights        String[]
  description       String
  market            String
  gallery           String[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  tier      String
  role      String
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
